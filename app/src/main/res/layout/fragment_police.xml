<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Red Layout-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#82ffffff"
        android:orientation="vertical"
        android:padding="18dp">
        <!--Blue Layout-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Green Layout-->
            <RelativeLayout
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="@dimen/margin">

                <!--Station1-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/station1" />

                <!--Title-->
                <TextView
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:gravity="center_horizontal"
                    android:textColor="#f9f4f4"
                    android:background="#78000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Station 1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <!--Green Layout-->
            <RelativeLayout
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="@dimen/margin">

                <!--Station2-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/station2" />
                <TextView
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:gravity="center_horizontal"
                    android:textColor="#f9f4f4"
                    android:background="#78000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Station 2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>

        <!--Blue Layout-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Green Layout-->
            <RelativeLayout
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_margin="@dimen/margin">

                <!--Station3-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/station3" />

                <TextView
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:gravity="center_horizontal"
                    android:textColor="#f9f4f4"
                    android:background="#78000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Station 3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <!--Green Layout-->
            <RelativeLayout
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/margin">

                <!--Station4-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/station4" />

                <TextView
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:gravity="center_horizontal"
                    android:textColor="#f9f4f4"
                    android:background="#78000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Station 4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>



</RelativeLayout>